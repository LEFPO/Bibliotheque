<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bibliothecaire.View.AssocierPretView">

    <StackLayout Padding="20">
        <Label Text="Données du livre" FontSize="18" FontAttributes="Bold"/>
        <Label Text="{Binding LivreSelectionne.Titre}" />
        <Label Text="{Binding LivreSelectionne.Auteur}" />

        <Entry Placeholder="Rechercher un lecteur" Text="{Binding RechercheLecteur}" />
        <ListView ItemsSource="{Binding LecteursDisponibles}" SelectedItem="{Binding LecteurSelectionne}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Nom}" Detail="{Binding Email}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Prêt" Command="{Binding ValiderPretCommand}" />
    </StackLayout>
</ContentPage>