<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bibliothecaire.View.LivreView">

    <StackLayout Padding="20">
        <Grid ColumnDefinitions="Auto, *">
            <Image Source="{Binding ImageLivre}" WidthRequest="150" HeightRequest="150"/>
            <StackLayout Grid.Column="1">
                <Label Text="Données du livre" FontSize="18" FontAttributes="Bold"/>
                <Label Text="{Binding Titre}"/>
                <Label Text="{Binding Auteur}"/>
                <Label Text="{Binding Genre}"/>
                <Label Text="Date de publication : {Binding DatePublication, StringFormat='{0:dd/MM/yyyy}'}"/>
            </StackLayout>
        </Grid>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="10">
            <Button Text="Historique" Command="{Binding VoirHistoriqueCommand}" />
            <Button Text="Ajouter" Command="{Binding AjouterLivreCommand}" />
            <Button Text="Modifier" Command="{Binding ModifierLivreCommand}" />
            <Button Text="Supprimer" Command="{Binding SupprimerLivreCommand}" />
        </StackLayout>
    </StackLayout>
</ContentPage>